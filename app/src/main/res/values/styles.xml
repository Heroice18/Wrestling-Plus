<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Login_Button" parent="ThemeOverlay.AppCompat">
        <item name="android:color">@color/Orange</item>
    </style>
    <style name="TournamentListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/Orange</item>
        <item name="android:divider">@color/Black</item>
        <item name="android:textColor">@color/Blue</item>
        <item name="android:shape">rectangle</item>
    </style>
    <style name="DialogBox" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:paddingTop">1dp</item>
        <item name="android:background">@color/Light_Blue</item>
        <item name="android:textColor">@color/Black</item>

    </style>
    <style name="checkBoxCreate">
        <item name="android:textColor">@color/Blue</item>
    </style>

</resources>
